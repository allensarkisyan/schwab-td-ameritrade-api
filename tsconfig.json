{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "rootDir": "./src",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "preserveConstEnums": true,
    "removeComments": false
  }
}